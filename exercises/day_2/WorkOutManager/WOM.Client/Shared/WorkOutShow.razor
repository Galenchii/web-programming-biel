@using WOM.Models;

<div>
    <button class="btn btn-danger" @onclick="Delete">Delete</button>&nbsp;
    @if (CurrentItem.Complete)
    {
        <p class="alert-info">@CurrentItem.Description</p>
        <p>Completed on: @CurrentItem.MarkedComplete</p>
    }
    else
    {
        <button class="btn btn-info" @onclick="MarkAsComplete">Done</button>
        <p>@CurrentItem.Description</p>
    }
    <p>Created on: @CurrentItem.Created</p>
</div>

@code {
    [Parameter]
    public WorkOut CurrentItem { get; set; }
    [Parameter]
    public Action Delete { get; set; }
    [Parameter]
    public Action MarkAsComplete { get; set; }
}
